# short-description: Create SD card image with a boot partition
# long-description: Creates a partitioned SD card image
#
bootloader --ptable gpt
part firmware --source bootimg-partition --fstype=vfat --label firmware --active --align 4 --size 16M
part /boot --source bootimg-efi --sourceparams="loader=kernel" --fstype=vfat --system-id 0xef00 --label bootfs --align 4 --use-uuid --include-path "${DEPLOY_DIR_IMAGE}/dtb ${DEPLOY_DIR_IMAGE}/ledge-initramfs.rootfs.cpio.gz" --fixed-size 128M
part / --source rootfs --fstype=ext4 --label rootfs --align 4 --fsuuid 6091b3a4-ce08-3020-93a6-f755a22ef03b --exclude-path boot/
